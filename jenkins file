     agent any 
          stages {
             stage('build) {
                       steps {
                          echo 'Building the application....'
                       }
                    }
                       stage('Test') { 
                             steps {
                                 echo 'Running tests....'
                             }
                      }
                     stage('Deploy) {
                            steps {
                             echo 'Deploying the application....'
                        }
                }
         }
}
